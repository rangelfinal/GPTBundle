{
  "include": ["./docs", "./packages", "./tests", ".eslintrc.js"],
  "exclude": ["public", "node_modules", "dist", ".next"],
  "compilerOptions": {
    "composite": true,
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@ai-form-toolkit/*": ["./packages/*/src"],
      "@docs/*": ["./docs/src"]
    }
  }
}
